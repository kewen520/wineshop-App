/* miniprogram/pages/mall/settleAccounts/checkoutSuc.wxss */

page {
  color: #fff;
}

.container0 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.orderSuc_pic {
  margin-top: 145rpx;
}

.orderSuc_pic image {
  width: 140rpx;
  height: 140rpx;
  border: 1rpx dashed #5d6268;
  display: flex;
  margin-bottom: 30rpx;
}

.orderSuc_pic text {
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}

.orderSuc_thm {
  width: 360rpx;
  height: 163rpx;
  border: 1rpx solid #5d6268;
  border-radius: 5px;
  margin-top: 88rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.orderSuc_thm text {
  display: flex;
  justify-content: center;
  align-items: center;
}

.order_txt1 {
  color: #a5a6a8;
  font-size: 27rpx;
  line-height: 20px;
}

.order_txt2 {
  color: #fff;
  font-size: 56rpx;
  line-height: 30px;
}

.danger_txt1 {
  color: #ff4c4c;
  font-size: 27rpx;
  line-height: 20px;
}

.orderSuc_xq {
  margin-top: 375rpx;
  text-align: center;
  color: #a5a6a8;
  font-size: 32rpx;
}

.order_txt2_img {
  width: 64rpx;
  height: 64rpx;
  transition: 0.3s;
  transform-origin: 32rpx 32rpx;
  animation: rotate 1s linear infinite;
}

.order_txt3_img {
  width: 64rpx;
  height: 64rpx;
}

@keyframes rotate {
  0% {
    transform: rotate(0);
  }
  50% {
    transform: rotate(180deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
