/* miniprogram/pages/mall/shoppingCart/shoppingCart.wxss */
.page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.top{
  height: 100rpx;
  background: #500;
}
.main{
  flex: 1;
  width: 100%;
  display: flex;
  padding: 0 40rpx;
  flex-direction: column;
}
.shopping-cart-item{
  height: 220rpx;
  display: block;
}
.bottom {
  height: 100rpx;
  background: #ccc;
}
.cart-item-box{  
  height: 220rpx;
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  background: #fff;
}
.remove{
  height: 220rpx;
  line-height: 220rpx;
  width: 60px;
  text-align: center;
  background: #FF4040;
  border-radius: 0 12rpx 12rpx 0;
  color: #fff;
}