<!--miniprogram/pages/mall/revAddress/revAddress.wxml-->
<view class="page">
  <view class="main">
    <view class="form-group">
      <text class="label">联系人</text>
      <input class="inp" value="{{userName}}" />
    </view>
    <view class="form-group">
      <text class="label">性别</text>
      <van-radio-group class="radio-group" value="{{ radio }}" bind:change="onChange">
        <van-radio name="1">先生</van-radio>
        <van-radio name="2">女士</van-radio>
      </van-radio-group>
    </view>
    <view class="form-group">
      <text class="label">手机号</text>
      <input class="inp" value="{{userPhone}}" />
    </view>
    <view class="form-group">
      <text class="label">酒店名</text>
      <text>{{wineshopName}}</text>
    </view>
    <view class="form-group">
      <text class="label">楼栋和房间号</text>
      <picker class="picker-box" bindchange="roomNumChange" value="{{index}}" range="{{picker}}">
        <view class="picker">
          {{index?picker[index]:'请选择楼栋和房间号'}}
        </view>
      </picker>
    </view>
  </view>

  <view class="btn">保存</view>
</view>