/* miniprogram/pages/index/index.wxss */
@import "../../iconfont.wxss";
.container{
  width: 100%;
  overflow: hidden;
}
.head{
  width: 100%;
  height: 340rpx;
  position: relative;
}
.banner-zz{  
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0);
  z-index: 10;
  position: absolute;
}
.head-banner-swiper{
  position: absolute;
  z-index: 9;
  width: 100%;
  height: 100%;
  opacity: .6;
}
.head-banner-swiper .swiper-item{  
  border-radius: 0;
}
.head-txt-box{
  position: absolute;
  width: 100%;
  top: 0;
  padding: 40rpx;
  color: #fff;
  z-index: 11;
}
.user-info{
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  line-height: 40rpx;
  padding-bottom: 20rpx;
}
.weather {
  line-height: 30rpx;
  display: block;
  font-size: 24rpx;
}
.head-model-box{
  position: absolute;
  z-index: 12;
  bottom: 0;
  height: 140rpx;
  width: 100%;
  padding: 0 40rpx;
  background: linear-gradient(to bottom,   
    rgba(0,0,0,0) 0%,   
    rgba(0,0,0,0.4) 44%,   
    rgba(0,0,0,0.6) 80%,   
    rgba(0,0,0,1) 100%);
}
.model-box{  
  display: flex;
  flex-direction: row;
}
.model-item{
  width: calc((100vw - 80rpx)/5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.iconfont{
  color: #fff;
  font-size: 40rpx;
}
.model-tit{
  padding-top: 10rpx; 
  line-height: 40rpx;
  font-size: 24rpx;
  color: #fff;
}
.wrapper{
  padding: 40rpx 40rpx 0 40rpx;
}
.device-group{
  padding-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
  width: 100%;
}
.device-item{
  width: 48%;
  margin-bottom: 30rpx;
}
.device-swiper{
  height: 640rpx;
  margin: 20rpx 0 40rpx 0;
}
.screen-swiper image.device-img{
  width: 80rpx !important;
  height: 80rpx !important;
}
.serve-swiper{
  height: 280rpx;
  margin: 20rpx 0 40rpx 0;
}
.swiper-box{  
  height: 240rpx;
  width: 100%;
}
.swiper-box image{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.model-img{
  width: 52rpx;
  height: 52rpx;
}
.shade-box{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.6);
  z-index: 100
}
.dialog{
  z-index: 10000 !important;
}
.swiper-dot-box{
  display: flex;
  flex-direction: row;
  justify-content: center
}
.swiper-dot{
  width: 30rpx;
  height: 6rpx;
  border-radius: 2rpx;
  margin-right: 10rpx;
  background: rgba(255,255,255,.2)
}