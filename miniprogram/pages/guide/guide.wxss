/* miniprogram/pages/guide/guide.wxss */
.page {
  position: relative;
  width: 100%;
  height: 100%;
  background-image: url(https://ym-smartspace.yunzhisheng.cn:8088/hotel/guide_home@2x.png);
  background-position: center;
  background-size: 100% 100%;
}
.bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom,   
    rgba(0,0,0,0) 0%,   
    rgba(0,0,0,0.4) 44%,   
    rgba(0,0,0,0.6) 80%,   
    rgba(0,0,0,0.6) 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img{
  width: 40%;
  margin-top: 140rpx;
}
.tit{
  font-size: 36rpx;
  line-height: 60rpx;
  color: #fff;
  font-weight: bold;
  margin-top: 400rpx;
}
.info{
  width: 90%;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-top: 40rpx;
  text-align: center;
  color: #fff;
  filter: .5;
}
.cu-btn{
  width: 80%;
  margin-top: 40rpx;
}