/* miniprogram/pages/my/index.wxss */
@import "../../iconfont.wxss";
button.share{
  background-color: none !important;
  background-size: 80rpx 80rpx;
  border: none;

}
.container{
  width: 100%;
  overflow: hidden;
}
.msg{
  position: relative;
}
.cir{
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: #FFA364;
  position: absolute;
  right: 240rpx;
  top:calc(50% - 6rpx);
}
.head{
  width: 100%;
  height: 340rpx;
  position: relative;
}
.y-cell {
  margin-top: 40rpx;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border: 4rpx #ccc solid;
  border-radius: 60rpx;
  position: absolute;
  top: 40rpx;
  right: 60rpx;
}
.share{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  bottom: 40rpx;
  right: 60rpx;
}
.line{
  margin: 50rpx 40rpx 0 40rpx;
  height: 10rpx;
  border-top:1rpx rgba(255, 255, 255, 0.1) solid;
}