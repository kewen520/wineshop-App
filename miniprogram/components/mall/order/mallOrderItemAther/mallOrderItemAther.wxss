/* components/mall/order/mallOrderItem/mallOrderItem.wxss */

.page {
  width: 100%;
}

.mallorder_box {
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

.control-count-down .van-count-down{
  color: #ff4343;
  display: inline-block;
  float: left;
}

.mallorder_list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 32rpx 32rpx 0 32rpx;
}

.mall_tit {
  color: #18191f;
  font-size: 32rpx;
}

.mall_tit_pay {
  color: #ffa364;
  font-size: 28rpx;
}

.mallorder_picbox {
  height: 144rpx;
  background: #f5f5f6;
  border-radius: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 24rpx 24rpx 0 24rpx;
  padding: 0 24rpx;
  position: relative;
}
.more{
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.orderpic+.orderpic{
  margin-left: 16rpx;
}
.orderpic {
  height: 96rpx;
  width: 96rpx;
  box-sizing: content-box;
  margin-top: 24rpx;
}

.mallorder_info {
  padding: 24rpx 32rpx 0 32rpx;
}

.info_list {
  display: flex;
  flex-direction: row;
  padding-bottom: 24rpx;
  justify-content: space-between;
}

.info_list text {
  color: #a5a6a8;
  font-size: 26rpx;
}

.info_num {
  color: #18191f;
  margin-right: 0;
  margin-left: auto;
}

.info_num text {
  color: #ff4343;
}

.info_btnbox {
  border-top: 1rpx solid #f4f4f4;
  padding: 20rpx 32rpx;
  display: flex;
  justify-content: flex-end;
}

.btn+.btn {
  margin-left: 20rpx;
}

.btn {
  font-size: 27rpx;
  width: 160rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
}

.cancel_btn {
  color: #81848a;
  border: 1rpx solid #a5a6a8;
  background: #fff;
  border-radius: 10rpx;
  margin-right: 0;
  margin-left: auto;
}

.again {
  color: #ffa364;
  border: 1rpx solid #ffa364;
  background: #fff;
  border-radius: 10rpx;
  margin-right: 0;
  margin-left: auto;
}
