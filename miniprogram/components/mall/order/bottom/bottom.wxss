/* components/mall/order/bottom/bottom.wxss */
.page {
  display: flex;
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
  justify-content: space-between;
  align-items: center;
}

.order-total {
  color: #bdbec0;
  font-size: 26rpx;
}

.bottom-r {
  margin-left: 40rpx;
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.btn {
  width: 200rpx;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.usable{  
  background: #ffa364;
}
.disabled{
  background: #A5A6A8;
}

.price-total, .price-icon {
  color: #fff;
}

.price-icon {
  font-size: 26rpx;
}

.price-total {
  font-size: 36rpx;
}