/* components/mall/order/orderItem/orderItem.wxss */

.order-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  margin: 20rpx 32rpx;
}
.order-list-left{
  width: calc(100% - 80px);
  height: 48px;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.order-list-right{
  width: 80px;
  height: 48px;
  display: flex;
  align-items: center;
}

.order-img {
  width: 48px;
  height: 48px;
}

.title-box {
  font-size: 26rpx;
  font-weight: bold;
  width: calc(100% - 50px);
  box-sizing: border-box;
  padding: 0 10px;
  line-height: 40rpx;
}

.order-num {
  width: 30px;
  text-align: left;
  font-size: 26rpx;
}

.pro-price {
  width: 50px;
  text-align: left;
  font-size: 28rpx;
}