/* components/mall/order/mallOrderItem/mallOrderItem.wxss */

.page {
  width: 100%;
 
}
.mallorder_box{
   border-radius: 10rpx;
  background: #fff;
  margin-bottom: 24rpx;

}




.mallorder_list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 32rpx 32rpx 0 32rpx;
}

.mall_tit {
  color: #18191f;
  font-size: 32rpx;
}

.mall_tit_pay {
  color: #ffa364;
  font-size: 28rpx;
}

.mallorder_picbox {
  height: 144rpx;
  background: #f5f5f6;
  border-radius: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 24rpx 24rpx 0 24rpx;
}

.orderpic {
  height: 96rpx;
  width: 96rpx;
  border: 1px solid red;
  margin: 24rpx 0 24rpx 24rpx;
}

.mallorder_info {
  padding: 24rpx 32rpx 0 32rpx;
}

.info_list {
  display: flex;
  flex-direction: row;
  padding-bottom: 24rpx;
  justify-content: space-between;
}

.info_list text {
  color: #a5a6a8;
  font-size: 26rpx;
}

.info_num {
  color: #18191f;
  margin-right: 0;
  margin-left:auto;
}

.info_num text {
  color: #ff4343;
}

.info_btnbox {
  border-top: 1rpx solid #f4f4f4;
  padding: 20rpx 32rpx;
}

.info_btnbox view {
  color: #ffa364;
  font-size: 27rpx;
  width: 160rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border: 1px solid #ffa364;
  background: #fff;
  border-radius: 10px;
  margin-right: 0;
  margin-left:auto;
}
