/* components/device/progress-bar/progress-bar.wxss */
.container{
  display: flex;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.shade{
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(36, 38, 49, .8);
  top: 0;
  left: 0;
  z-index: 1;
}
.controller-txt{
  width: 80rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
  text-align: center;
  color: #fff;
  background: rgba(255, 255, 255, .1);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.controller-box{
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}
.controller-icon{
  width: 64rpx;
  height: 64rpx;
}
.control{
  position: relative;
  flex: 1;
  margin: 0 40rpx;
}

.movable-area {
  width: 100%;
  height: 40rpx;
  position: absolute;
  bottom: -18rpx;
  left: 0;
}

.percentage{
  position: absolute;
  display: block;
  width: 60rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #fff;
  background: rgba(red, green, blue, .1);
  border-radius: 8rpx;
  text-align: center;
}

.movable-view {
  width: 40rpx;
  height: 40rpx;
  background: #fefefe;
  border-radius: 50%;
}