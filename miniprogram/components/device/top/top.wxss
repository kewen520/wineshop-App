/* components/device/top/top.wxss */
.top {
  width: 100%;
  height: 160rpx;
  padding: 40rpx 20rpx 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.derail-box{
  position: absolute;
  top: 200rpx;
  right: 40rpx;
}
.icon-box{
  width: 72rpx;
  height: 72rpx;
}
.disable{
  opacity:.2;
}
.tit-box{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.cn-tit{
  font-size: 40rpx;
  color: #fff;
  padding-bottom: 20rpx;
}
.en-tit{
  font-size: 30rpx;
  color: rgba(255, 255, 255, .2)
}