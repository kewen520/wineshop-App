/* index.wxss */

.user-cell {
  margin: 40rpx;
  display: flex;
  flex-direction: row;
  padding-bottom: 40rpx;
  border-bottom: 1rpx #ccc solid;
}

.user-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: block;
  margin-right: 40rpx;
}

.user-name {
  flex: 1;
  margin-right: 40rpx;
}

.user-cell-del-btn {
  margin-top: 60rpx;
  float: right;
  width: 80rpx;
  height: 80rpx;
  /* background: #fff; */
  border-radius: 50%;
  border: 1px solid #017bff;
  background: #fff;
  background-image: url('data:image/png;base64,');
  background-size: 50rpx;
  background-repeat: no-repeat;
  background-position: center;
}