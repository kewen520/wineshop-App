/* components/index/device/device.wxss */

.container {
  width: 100%;
  height: 160rpx;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 16rpx 30rpx;
  position: relative;
}
.container.hover-class{
  opacity: .6
}

.h1 {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.h2 {
  height: 40rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.device-img{
  display: block;
  width: 80rpx !important;
  height: 80rpx !important;
}

.device-name {
  font-weight: bold;
  color: #000;
  font-size: 32rpx;
  margin-right: 10rpx;
}

.device-en-name {
  color: #c8c9cb;
  font-size: 24rpx;
}
