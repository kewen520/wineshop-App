/* components/bill/billBox/billBox.wxss */
.bill-box{
  height: 160rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.bill-box::after {
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  width: 200%;
  height: 200%;
  border-bottom: 1rpx solid rgba(255, 255, 255, .5);
  border-radius: inherit;
  content: " ";
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
}
.txt-box{
  margin-right: 40rpx;
  flex: 1;
}
.icon{
  width: 60rpx;
  height: 60rpx;
}
.bill-tit, .bill-num{
  display: block;
}
.bill-tit{
  line-height: 60rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, .7);
}
.bill-num{
  line-height: 60rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, .2);
}