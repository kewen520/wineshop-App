/* components/head/head.wxss */
.container{
  width: 100%;
  height: 340rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.head-img{
  width: 100%;
  height: 100%;
  opacity: .6;
}
.head-txt-box{
  position: absolute;
  width: 100%;
  top: 0;
  padding: 60rpx 40rpx 40rpx 40rpx;
  color: #fff;
}
.tit{
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  line-height: 40rpx;
  padding-bottom: 20rpx;
}
.describe {
  line-height: 30rpx;
  display: block;
  font-size: 24rpx;
}
.head-model-box{
  position: absolute;
  bottom: 0;
  height: 140rpx;
  width: 100%;
  padding: 0 40rpx;
  display: flex;
  flex-direction: row;
  background: linear-gradient(to bottom,   
    rgba(36,38,49,0) 0%,    
    rgba(36,38,49,.8) 100%);
}